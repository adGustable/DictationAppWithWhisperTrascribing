<Window x:Class="DictationApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DictationApp â€“ Login"
        Height="580" Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main card -->
        <Border Grid.Row="0" Margin="40,40,40,20" Style="{StaticResource Card}" Padding="36">
            <StackPanel>
                <!-- Logo / Branding -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,28">
                    <Border Width="64" Height="64" CornerRadius="16"
                            Background="{StaticResource PrimaryBrush}"
                            HorizontalAlignment="Center">
                        <TextBlock Text="ðŸŽ™" FontSize="32"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="DictationApp" FontSize="26" FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" Margin="0,10,0,2"
                               FontFamily="Segoe UI"/>
                    <TextBlock Text="Professional Voice Dictation"
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" FontFamily="Segoe UI"/>
                </StackPanel>

                <!-- Tab: Login / Register -->
                <TabControl x:Name="MainTabControl" BorderThickness="0"
                            Background="Transparent">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="FontFamily" Value="Segoe UI"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="16,8"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TabControl.Resources>

                    <!-- LOGIN TAB -->
                    <TabItem Header="Sign In">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Username" FontFamily="Segoe UI" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <TextBox x:Name="LoginUsername" Style="{StaticResource ModernTextBox}"
                                     Height="40" Margin="0,0,0,14"/>

                            <TextBlock Text="Password" FontFamily="Segoe UI" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <PasswordBox x:Name="LoginPassword" Style="{StaticResource ModernPasswordBox}"
                                         Height="40" Margin="0,0,0,6"
                                         KeyDown="LoginPassword_KeyDown"/>

                            <TextBlock x:Name="LoginError" Text="" Foreground="{StaticResource DangerBrush}"
                                       FontSize="12" FontFamily="Segoe UI" Margin="0,4,0,0"
                                       Visibility="Collapsed"/>

                            <Button Content="Sign In" Style="{StaticResource PrimaryButton}"
                                    Height="42" Margin="0,18,0,0"
                                    Click="SignInButton_Click"/>

                            <Border Margin="0,20,0,0" Padding="12"
                                    Background="#F1F3F4" CornerRadius="6">
                                <StackPanel>
                                    <TextBlock Text="Default Accounts:" FontSize="12" FontWeight="SemiBold"
                                               FontFamily="Segoe UI" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="speaker1 / password  (Speaker)" FontSize="11"
                                               FontFamily="Consolas" Margin="0,4,0,0"/>
                                    <TextBlock Text="reviewer1 / password  (Reviewer)" FontSize="11"
                                               FontFamily="Consolas" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </TabItem>

                    <!-- REGISTER TAB -->
                    <TabItem Header="Register">
                        <StackPanel Margin="0,20,0,0">
                            <TextBlock Text="Display Name" FontFamily="Segoe UI" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <TextBox x:Name="RegDisplayName" Style="{StaticResource ModernTextBox}"
                                     Height="40" Margin="0,0,0,10"/>

                            <TextBlock Text="Username" FontFamily="Segoe UI" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <TextBox x:Name="RegUsername" Style="{StaticResource ModernTextBox}"
                                     Height="40" Margin="0,0,0,10"/>

                            <TextBlock Text="Password" FontFamily="Segoe UI" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <PasswordBox x:Name="RegPassword" Style="{StaticResource ModernPasswordBox}"
                                         Height="40" Margin="0,0,0,10"/>

                            <TextBlock Text="Role" FontFamily="Segoe UI" FontSize="13"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                            <ComboBox x:Name="RegRole" Height="38" FontFamily="Segoe UI" FontSize="14"
                                      Margin="0,0,0,6">
                                <ComboBoxItem Content="Speaker" IsSelected="True"/>
                                <ComboBoxItem Content="Reviewer"/>
                            </ComboBox>

                            <TextBlock x:Name="RegError" Text="" Foreground="{StaticResource DangerBrush}"
                                       FontSize="12" FontFamily="Segoe UI" Margin="0,2,0,0"
                                       Visibility="Collapsed"/>

                            <Button Content="Create Account" Style="{StaticResource PrimaryButton}"
                                    Height="42" Margin="0,16,0,0"
                                    Click="RegisterButton_Click"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <TextBlock Grid.Row="1" Text="Â© 2024 DictationApp"
                   FontSize="11" FontFamily="Segoe UI"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   HorizontalAlignment="Center" Margin="0,0,0,16"/>
    </Grid>
</Window>
