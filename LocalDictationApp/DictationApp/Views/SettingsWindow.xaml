<Window x:Class="DictationApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="400" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="22" FontWeight="Bold"
                   FontFamily="Segoe UI" Margin="0,0,0,24"/>

        <StackPanel Grid.Row="1">
            <!-- Whisper API Key -->
            <Border Style="{StaticResource Card}" Padding="18" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="ðŸ¤– OpenAI Whisper API Key" FontSize="15" FontWeight="SemiBold"
                               FontFamily="Segoe UI" Margin="0,0,0,6"/>
                    <TextBlock TextWrapping="Wrap" FontSize="12" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12">
                        Required for audio transcription. Get your key at platform.openai.com.
                        The key is stored locally on your machine.
                    </TextBlock>
                    <TextBox x:Name="ApiKeyBox" Style="{StaticResource ModernTextBox}"
                             Height="38" FontFamily="Consolas" FontSize="13" />
                    <TextBlock x:Name="ApiKeyStatus" FontSize="12" FontFamily="Segoe UI"
                               Margin="0,6,0,0"/>
                </StackPanel>
            </Border>

            <!-- Default Language -->
            <Border Style="{StaticResource Card}" Padding="18">
                <StackPanel>
                    <TextBlock Text="ðŸŒ Default Transcription Language" FontSize="15" FontWeight="SemiBold"
                               FontFamily="Segoe UI" Margin="0,0,0,6"/>
                    <TextBlock Text="Language hint for Whisper (improves accuracy for non-English audio)."
                               FontSize="12" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                    <ComboBox x:Name="DefaultLangCombo" Height="36" FontFamily="Segoe UI" FontSize="14" Width="120" HorizontalAlignment="Left">
                        <ComboBoxItem Content="en"/>
                        <ComboBoxItem Content="es"/>
                        <ComboBoxItem Content="fr"/>
                        <ComboBoxItem Content="de"/>
                        <ComboBoxItem Content="it"/>
                        <ComboBoxItem Content="pt"/>
                        <ComboBoxItem Content="nl"/>
                        <ComboBoxItem Content="ja"/>
                        <ComboBoxItem Content="zh"/>
                    </ComboBox>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Save Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Style="{StaticResource OutlineButton}"
                    Padding="16,8" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Save Settings" Style="{StaticResource PrimaryButton}"
                    Padding="16,8"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
