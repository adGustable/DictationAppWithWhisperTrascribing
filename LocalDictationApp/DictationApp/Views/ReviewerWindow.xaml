<Window x:Class="DictationApp.Views.ReviewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DictationApp â€“ Reviewer Dashboard"
        Height="740" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#1557B0">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸŽ™" FontSize="22" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="DictationApp" FontSize="18" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    <Border Margin="12,0,0,0" Padding="8,3" CornerRadius="12"
                            Background="#0F3F80" VerticalAlignment="Center">
                        <TextBlock Text="REVIEWER" FontSize="10" FontWeight="Bold"
                                   Foreground="White" FontFamily="Segoe UI"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                    <TextBlock x:Name="UserNameLabel" Text=""
                               FontSize="14" Foreground="White" FontFamily="Segoe UI"
                               VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Button Content="âš™ Settings" Style="{StaticResource OutlineButton}"
                            Foreground="White" BorderBrush="White"
                            Padding="10,6" FontSize="12"
                            Click="Settings_Click" Margin="0,0,8,0"/>
                    <Button Content="Sign Out" Style="{StaticResource OutlineButton}"
                            Foreground="White" BorderBrush="White"
                            Padding="10,6" FontSize="12"
                            Click="SignOut_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Left Panel: File Queue -->
        <Border Grid.Row="1" Grid.Column="0" Margin="16,16,8,16"
                Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Padding="18,14"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="File Queue" FontSize="17" FontWeight="SemiBold"
                                       FontFamily="Segoe UI"/>
                            <TextBlock x:Name="QueueCountLabel" FontSize="12" FontFamily="Segoe UI"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <Button Content="â†»" HorizontalAlignment="Right"
                                Style="{StaticResource OutlineButton}"
                                Padding="8,6" FontSize="14"
                                Click="Refresh_Click"/>
                    </Grid>
                </Border>

                <!-- Filter -->
                <Border Grid.Row="1" Padding="12,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                        Background="#FAFBFC">
                    <ComboBox x:Name="FilterCombo" Height="32" FontFamily="Segoe UI" FontSize="13"
                              SelectionChanged="FilterCombo_SelectionChanged">
                        <ComboBoxItem Content="All Files" IsSelected="True"/>
                        <ComboBoxItem Content="Awaiting Transcription"/>
                        <ComboBoxItem Content="Transcribed (needs review)"/>
                        <ComboBoxItem Content="Reviewed"/>
                    </ComboBox>
                </Border>

                <!-- List -->
                <ListBox x:Name="FileQueue" Grid.Row="2"
                         Background="Transparent" BorderThickness="0"
                         Padding="10,8"
                         ItemContainerStyle="{StaticResource AudioFileItem}"
                         SelectionChanged="FileQueue_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding FileName}" FontSize="13" FontWeight="SemiBold"
                                           FontFamily="Segoe UI" TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding SpeakerName}" FontSize="11"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           FontFamily="Segoe UI" Margin="0,2,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="{Binding DurationDisplay}" FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontFamily="Segoe UI"/>
                                    <TextBlock Text=" Â· " FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding StatusDisplay}" FontSize="11"
                                               FontFamily="Segoe UI"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Panel: Transcription Editor -->
        <Border Grid.Row="1" Grid.Column="1" Margin="8,16,16,16"
                Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File Info Header -->
                <Border Grid.Row="0" Padding="20,14"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="FileNameLabel"
                                       Text="Select a file from the queue"
                                       FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0" x:Name="FileMetaPanel">
                                <TextBlock x:Name="SpeakerLabel" FontSize="12" FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text=" Â· " FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="DurationLabel" FontSize="12" FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text=" Â· " FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="StatusLabel" FontSize="12" FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Playback Controls -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="PlayFileButton" Content="â–¶ Play Audio"
                                    Style="{StaticResource OutlineButton}"
                                    IsEnabled="False" Padding="10,6" FontSize="12"
                                    Click="PlayFile_Click" Margin="0,0,8,0"/>
                            <Button x:Name="StopPlayButton" Content="â¹"
                                    Style="{StaticResource OutlineButton}"
                                    IsEnabled="False" Padding="10,6" FontSize="12"
                                    Click="StopPlay_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Transcription Toolbar -->
                <Border Grid.Row="1" Padding="16,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                        Background="#FAFBFC">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="TranscribeButton"
                                Content="ðŸ¤– Transcribe with Whisper"
                                Style="{StaticResource PrimaryButton}"
                                IsEnabled="False" Padding="12,7" FontSize="13"
                                Click="Transcribe_Click"/>

                        <ComboBox x:Name="LanguageCombo" Width="100" Height="34"
                                  FontFamily="Segoe UI" FontSize="13" Margin="10,0,0,0"
                                  ToolTip="Audio language for Whisper">
                            <ComboBoxItem Content="en" IsSelected="True"/>
                            <ComboBoxItem Content="es"/>
                            <ComboBoxItem Content="fr"/>
                            <ComboBoxItem Content="de"/>
                            <ComboBoxItem Content="it"/>
                            <ComboBoxItem Content="pt"/>
                            <ComboBoxItem Content="nl"/>
                            <ComboBoxItem Content="ja"/>
                            <ComboBoxItem Content="zh"/>
                            <ComboBoxItem Content="ar"/>
                        </ComboBox>

                        <TextBlock x:Name="TranscribeStatus" Text=""
                                   FontSize="12" FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="16,0,0,0"/>

                        <!-- Word Count -->
                        <TextBlock x:Name="WordCountLabel" Text=""
                                   FontSize="12" FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center" Margin="16,0,0,0"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Transcription Text Editor -->
                <TextBox x:Name="TranscriptionEditor"
                     Style="{StaticResource WatermarkTextBox}"
                     Tag="Type or paste the transcript here. Listen to the audio above and type as you go."
                     Grid.Row="2"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     FontFamily="Segoe UI"
                     FontSize="15"
                     Padding="20,16"
                     BorderThickness="0"
                     IsEnabled="False"
                     Foreground="{StaticResource TextPrimaryBrush}"
                     Background="White"/>

                <!-- Notes Section -->
                <Border Grid.Row="3" Padding="16,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Reviewer Notes" FontSize="13" FontWeight="SemiBold"
                                   FontFamily="Segoe UI" Margin="0,0,0,6"/>
                        <TextBox x:Name="ReviewerNotesBox"
                             Grid.Row="1"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             Style="{StaticResource ModernTextBox}"
                             IsEnabled="False"/>
                    </Grid>
                </Border>

                <!-- Action Bar -->
                <Border Grid.Row="4" Padding="16,12"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                        Background="#FAFBFC">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="SaveButton" Content="ðŸ’¾ Save Changes"
                                    Style="{StaticResource SuccessButton}"
                                    IsEnabled="False" Padding="12,8" FontSize="13"
                                    Click="Save_Click"/>
                            <Button x:Name="MarkReviewedButton"
                                    Content="âœ… Mark as Reviewed"
                                    Style="{StaticResource PrimaryButton}"
                                    IsEnabled="False" Padding="12,8" FontSize="13"
                                    Margin="8,0,0,0"
                                    Click="MarkReviewed_Click"/>
                        </StackPanel>
                        <Button x:Name="ExportButton"
                                Content="ðŸ“„ Export to Word"
                                Style="{StaticResource OutlineButton}"
                                IsEnabled="False" Padding="12,8" FontSize="13"
                                HorizontalAlignment="Right"
                                Click="Export_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
