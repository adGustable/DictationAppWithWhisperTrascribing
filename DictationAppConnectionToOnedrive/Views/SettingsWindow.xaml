<Window x:Class="DictationApp.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="500" Width="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="22" FontWeight="Bold"
                   FontFamily="Segoe UI" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top">

            <!-- Speaker Output Folder -->
            <Border Style="{StaticResource Card}" Padding="18" Margin="0,0,0,14">
                <StackPanel>
                    <TextBlock Text="ðŸŽ™  Speaker â€” Audio Output Folder" FontSize="14" FontWeight="SemiBold"
                               FontFamily="Segoe UI" Margin="0,0,0,6"/>
                    <TextBlock Text="Audio files are saved here. Point this to your shared OneDrive folder."
                               FontSize="12" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="SpeakerFolderBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Height="34" Padding="3,3,0,0" FontSize="12" IsReadOnly="True" Background="#F8F9FA"/>
                        <Button Grid.Column="2" Content="Browseâ€¦"
                                Style="{StaticResource OutlineButton}"
                                Padding="10,6" FontSize="12" Height="34"
                                Click="BrowseSpeaker_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Reviewer Working Folder -->
            <Border Style="{StaticResource Card}" Padding="18">
                <StackPanel>
                    <TextBlock Text="ðŸ“  Reviewer â€” Working Folder" FontSize="14" FontWeight="SemiBold"
                               FontFamily="Segoe UI" Margin="0,0,0,6"/>
                    <TextBlock Text="The default folder shown when opening audio files for review."
                               FontSize="12" FontFamily="Segoe UI"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="ReviewerFolderBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Height="34" Padding="3,3,0,0" FontSize="12" IsReadOnly="True" Background="#F8F9FA"/>
                        <Button Grid.Column="2" Content="Browseâ€¦"
                                Style="{StaticResource OutlineButton}"
                                Padding="10,6" FontSize="12" Height="34"
                                Click="BrowseReviewer_Click"/>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel" Style="{StaticResource OutlineButton}"
                    Padding="16,8" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Save Settings" Style="{StaticResource PrimaryButton}"
                    Padding="16,8"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
