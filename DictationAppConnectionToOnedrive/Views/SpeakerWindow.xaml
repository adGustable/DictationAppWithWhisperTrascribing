<Window x:Class="DictationApp.Views.SpeakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DictationApp â€“ Speaker"
        Height="850" Width="960"
        MinHeight="580" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="370"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â”€â”€ Top Bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource PrimaryDarkBrush}">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸŽ™" FontSize="22" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="DictationApp" FontSize="18" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    <Border Margin="12,0,0,0" Padding="8,3" CornerRadius="12"
                            Background="#B71C1C" VerticalAlignment="Center">
                        <TextBlock Text="SPEAKER" FontSize="10" FontWeight="Bold"
                                   Foreground="White" FontFamily="Segoe UI"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="âš™ Settings" Style="{StaticResource OutlineButton}"
                            Foreground="White" BorderBrush="White"
                            Padding="10,6" FontSize="12" Margin="0,0,8,0"
                            Click="Settings_Click"/>
                    <Button Content="â† Home" Style="{StaticResource OutlineButton}"
                            Foreground="White" BorderBrush="White"
                            Padding="10,6" FontSize="12"
                            Click="Home_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â”€â”€ Left Panel : Recording Controls â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="1" Grid.Column="0" Margin="16,16,8,16"
                Style="{StaticResource Card}" Padding="22">
            <StackPanel>

                <TextBlock Text="New Recording" FontSize="17" FontWeight="SemiBold"
                           FontFamily="Segoe UI" Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,18"/>

                <!-- File Name (REQUIRED) -->
                <StackPanel Margin="0,0,0,14">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <TextBlock Text="File Name" FontSize="13" FontFamily="Segoe UI"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text=" *" Foreground="{StaticResource DangerBrush}"
                                   FontSize="13" FontWeight="Bold"/>
                    </StackPanel>
                    <TextBox x:Name="FileNameBox"
                             Height="50"
                             Padding="3,0,0,0"
                             Style="{StaticResource WatermarkTextBox}"
                             Tag="Required â€” e.g. Client Name 2024-06-01" />
                    <TextBlock x:Name="FileNameError"
                               Text="A file name is required before recording."
                               Foreground="{StaticResource DangerBrush}"
                               FontSize="11" FontFamily="Segoe UI"
                               Margin="0,3,0,0" Visibility="Collapsed"/>
                </StackPanel>

                <!-- Waveform -->
                <Border Height="72" CornerRadius="8" Background="#F1F3F4"
                        Margin="0,0,0,12" ClipToBounds="True">
                    <Canvas x:Name="WaveformCanvas"/>
                </Border>

                <!-- Timer -->
                <TextBlock x:Name="TimerLabel" Text="00:00"
                           FontSize="46" FontFamily="Consolas" FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,2"/>
                <TextBlock x:Name="RecordingStatusLabel" Text="Ready to record"
                           FontSize="13" FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" Margin="0,0,0,18"/>

                <!-- Record / Pause / Stop row -->
                <Grid Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="RecordPauseButton"
                            Grid.Column="0"
                            Content="âº  Record"
                            Style="{StaticResource DangerButton}"
                            Height="44" FontSize="14"
                            Click="RecordPause_Click"/>

                    <Button x:Name="StopButton"
                            Grid.Column="2"
                            Content="â¹  Stop"
                            Style="{StaticResource PrimaryButton}"
                            Height="44" FontSize="14"
                            IsEnabled="False"
                            Click="Stop_Click"/>
                </Grid>

                <!-- Pause hint -->
                <TextBlock x:Name="PauseHint"
                           Text="Tip: Pause to take a break â€” audio continues in the same file when you resume."
                           TextWrapping="Wrap" FontSize="11" FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,6,0,0"/>

                <Separator Margin="0,18"/>

                <!-- Output Folder -->
                <TextBlock Text="Save Location" FontSize="13" FontWeight="SemiBold"
                           FontFamily="Segoe UI" Margin="0,0,0,6"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="OutputFolderBox"
                             Style="{StaticResource ModernTextBox}"
                             Height="34" Padding="3,3,0,0" FontSize="12" IsReadOnly="True"
                             Background="#F8F9FA"/>
                    <Button Grid.Column="2" Content="Browseâ€¦"
                            Style="{StaticResource OutlineButton}"
                            Padding="10,6" FontSize="12" Height="34"
                            Click="BrowseFolder_Click"/>
                </Grid>
                <TextBlock Text="This folder is shared via OneDrive with your reviewer."
                           FontSize="11" FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           TextWrapping="Wrap" Margin="0,4,0,0"/>
                <!-- Notes -->
                <TextBlock Text="Notes" FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontFamily="Segoe UI" Margin="0,12,0,4"/>
                <TextBox x:Name="NotesBox" Style="{StaticResource ModernTextBox}"
                     Height="141" Padding="3,4,3,0" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>

        <!-- â”€â”€ Right Panel : Recordings List â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="1" Grid.Column="1" Margin="8,16,16,16"
                Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Padding="20,14"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="My Recordings" FontSize="17" FontWeight="SemiBold"
                                       FontFamily="Segoe UI"/>
                            <TextBlock x:Name="RecordingCountLabel" FontSize="12" FontFamily="Segoe UI"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock Text="Show:" FontSize="12" FontFamily="Segoe UI"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <!-- Filter dropdown -->
                            <ComboBox x:Name="FilterCombo" Width="164" Height="30"
                                      FontFamily="Segoe UI" FontSize="12"
                                      SelectionChanged="FilterCombo_SelectionChanged">
                                <ComboBoxItem Content="Files from today" IsSelected="True"/>
                                <ComboBoxItem Content="Files from this week"/>
                                <ComboBoxItem Content="All files"/>
                                <ComboBoxItem Content="No files shown"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Playback progress bar (hidden when not playing) -->
                <Border Grid.Row="1" x:Name="PlaybackBar"
                        Padding="20,8" Background="#F8F9FA"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="PlaybackFileName" FontSize="12" FontWeight="SemiBold"
                                       FontFamily="Segoe UI" TextTrimming="CharacterEllipsis"/>
                            <Slider x:Name="PlaybackSlider" Minimum="0" Maximum="100" Value="0"
                                    Height="18" Margin="0,4,0,0"
                                    IsEnabled="False"/>
                        </StackPanel>
                        <TextBlock x:Name="PlaybackTimeLabel" Grid.Column="1"
                                   FontSize="12" FontFamily="Consolas"
                                   VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </Grid>
                </Border>

                <!-- Recordings list -->
                <ListBox x:Name="RecordingsList" Grid.Row="2"
                         Background="Transparent" BorderThickness="0"
                         Padding="12,8"
                         ItemContainerStyle="{StaticResource AudioFileItem}"
                         SelectionChanged="RecordingsList_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding FileName}" FontSize="14" FontWeight="SemiBold"
                                               FontFamily="Segoe UI" TextTrimming="CharacterEllipsis"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="{Binding DurationDisplay}" FontSize="12"
                                                   FontFamily="Segoe UI"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text=" Â· " FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding FileSizeDisplay}" FontSize="12"
                                                   FontFamily="Segoe UI"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text=" Â· " FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Text="{Binding RecordedAt, StringFormat='MMM d, h:mm tt'}"
                                                   FontSize="12" FontFamily="Segoe UI"
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding StatusDisplay}"
                                           FontSize="11" FontFamily="Segoe UI"
                                           VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty state message -->
                <TextBlock x:Name="EmptyLabel" Grid.Row="2"
                           Text="No recordings to display."
                           FontSize="14" FontFamily="Segoe UI"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="Collapsed"/>

                <!-- Action Bar -->
                <Border Grid.Row="3" Padding="12,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                        Background="#FAFBFC">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="PlayButton" Content="â–¶  Play"
                                    Style="{StaticResource SuccessButton}"
                                    IsEnabled="False" Padding="12,7" FontSize="13"
                                    Click="Play_Click"/>
                            <Button x:Name="StopPlayButton" Content="â¹  Stop"
                                    Style="{StaticResource OutlineButton}"
                                    IsEnabled="False" Padding="12,7" FontSize="13"
                                    Margin="8,0,0,0"
                                    Click="StopPlay_Click"/>
                            <Button x:Name="SendButton" Content="ðŸ“¤  Send for Review"
                                    Style="{StaticResource PrimaryButton}"
                                    IsEnabled="False" Padding="12,7" FontSize="13"
                                    Margin="8,0,0,0"
                                    Click="Send_Click"/>
                        </StackPanel>
                        <Button x:Name="DeleteButton" Content="ðŸ—‘  Delete"
                                Style="{StaticResource DangerButton}"
                                IsEnabled="False" Padding="12,7" FontSize="13"
                                HorizontalAlignment="Right"
                                Click="Delete_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
