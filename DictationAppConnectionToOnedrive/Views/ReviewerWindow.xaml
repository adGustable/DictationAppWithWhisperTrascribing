<Window x:Class="DictationApp.Views.ReviewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DictationApp â€“ Reviewer"
        Height="740" Width="1080"
        MinHeight="600" MinWidth="860"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â”€â”€ Top Bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="{StaticResource PrimaryDarkBrush}">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“" FontSize="22" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="DictationApp" FontSize="18" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                    <Border Margin="12,0,0,0" Padding="8,3" CornerRadius="12"
                            Background="#0F3F80" VerticalAlignment="Center">
                        <TextBlock Text="REVIEWER" FontSize="10" FontWeight="Bold"
                                   Foreground="White" FontFamily="Segoe UI"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button Content="âš™ Settings" Style="{StaticResource OutlineButton}"
                            Foreground="White" BorderBrush="White"
                            Padding="10,6" FontSize="12" Margin="0,0,8,0"
                            Click="Settings_Click"/>
                    <Button Content="â† Home" Style="{StaticResource OutlineButton}"
                            Foreground="White" BorderBrush="White"
                            Padding="10,6" FontSize="12"
                            Click="Home_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â”€â”€ Left Panel : File Queue â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="1" Grid.Column="0" Margin="16,16,8,16"
                Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Padding="18,14"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="Audio Files" FontSize="17" FontWeight="SemiBold"
                                       FontFamily="Segoe UI"/>
                            <TextBlock x:Name="QueueCountLabel" FontSize="12" FontFamily="Segoe UI"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button Content="+ Open File" Style="{StaticResource PrimaryButton}"
                                    Padding="10,6" FontSize="12" Margin="0,0,6,0"
                                    Click="OpenFile_Click"/>
                            <Button Content="â†»" Style="{StaticResource OutlineButton}"
                                    Padding="8,6" FontSize="14"
                                    Click="Refresh_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- OneDrive folder -->
                <Border Grid.Row="1" Padding="12,10" Background="#FAFBFC"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="OneDrive / Shared Folder" FontSize="12" FontWeight="SemiBold"
                                   FontFamily="Segoe UI" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FolderBox" Style="{StaticResource ModernTextBox}"
                                     Height="30" Padding="3,3,0,0" FontSize="11" IsReadOnly="True" Background="#F0F0F0"/>
                            <Button Grid.Column="2" Content="Browseâ€¦"
                                    Style="{StaticResource OutlineButton}"
                                    Padding="8,4" FontSize="11" Height="30"
                                    Click="BrowseFolder_Click"/>
                        </Grid>
                        <Button Content="ðŸ“‚ Load files from this folder"
                                Style="{StaticResource OutlineButton}"
                                HorizontalAlignment="Left"
                                Padding="8,4" FontSize="11" Margin="0,6,0,0"
                                Click="LoadFromFolder_Click"/>
                    </StackPanel>
                </Border>

                <!-- File list -->
                <ListBox x:Name="FileQueue" Grid.Row="2"
                         Background="Transparent" BorderThickness="0"
                         Padding="10,6"
                         ItemContainerStyle="{StaticResource AudioFileItem}"
                         SelectionChanged="FileQueue_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding FileName}" FontSize="13" FontWeight="SemiBold"
                                           FontFamily="Segoe UI" TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                    <TextBlock Text="{Binding DurationDisplay}" FontSize="11"
                                               FontFamily="Segoe UI"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text=" Â· " FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding StatusDisplay}" FontSize="11"
                                               FontFamily="Segoe UI"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- â”€â”€ Right Panel : Transcript Editor â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="1" Grid.Column="1" Margin="8,16,16,16"
                Style="{StaticResource Card}" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- File info -->
                <Border Grid.Row="0" Padding="20,14"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                    <Grid>
                        <StackPanel>
                            <TextBlock x:Name="FileNameLabel" Text="Select or open a file"
                                       FontSize="16" FontWeight="SemiBold" FontFamily="Segoe UI"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock x:Name="FileDurationLabel" FontSize="12"
                                           FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="FileStatusLabel" FontSize="12"
                                           FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="8,0,0,0"/>
                                <TextBlock x:Name="SpeakerLabel" FontSize="12" FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text=" Â· " FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="DurationLabel" FontSize="12" FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Text=" Â· " FontSize="12"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="StatusLabel" FontSize="12" FontFamily="Segoe UI"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Playback -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock x:Name="PlaybackTimeLabel" FontSize="12" FontFamily="Consolas"
                                       VerticalAlignment="Center" Margin="0,0,10,0"
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Button x:Name="PlayButton" Content="â–¶ Play Audio"
                                    Style="{StaticResource SuccessButton}"
                                    IsEnabled="False" Padding="10,6" FontSize="12"
                                    Click="Play_Click" Margin="0,0,6,0"/>
                            <Button x:Name="StopPlayButton" Content="â¹"
                                    Style="{StaticResource OutlineButton}"
                                    IsEnabled="False" Padding="10,6" FontSize="12"
                                    Click="StopPlay_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Playback slider -->
                <Border Grid.Row="1" Padding="20,6" Background="#FAFBFC"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                        x:Name="SliderBar" Visibility="Collapsed">
                    <Slider x:Name="PlaybackSlider" Minimum="0" Maximum="100" Value="0"
                            IsEnabled="False" Height="18"/>
                </Border>

                <!-- Transcription Toolbar -->
                <Border Grid.Row="1" Padding="16,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                        Background="#FAFBFC">  
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="TranscribeButton"
                                Content="ðŸ¤– Transcribe with Whisper"
                                Style="{StaticResource PrimaryButton}"
                                IsEnabled="False" Padding="12,7" FontSize="13"
                                Click="Transcribe_Click"/>

                        <ComboBox x:Name="LanguageCombo" Width="100" Height="34"
                                  FontFamily="Segoe UI" FontSize="13" Margin="10,0,0,0"
                                  ToolTip="Audio language for Whisper"> 
                            <ComboBoxItem Content="en" IsSelected="True"/>
                            <ComboBoxItem Content="es"/>
                            <ComboBoxItem Content="fr"/>
                            <ComboBoxItem Content="de"/>
                            <ComboBoxItem Content="it"/>
                            <ComboBoxItem Content="pt"/>
                            <ComboBoxItem Content="nl"/>
                            <ComboBoxItem Content="ja"/>
                            <ComboBoxItem Content="zh"/>
                            <ComboBoxItem Content="ar"/>
                        </ComboBox>

                        <TextBlock x:Name="TranscribeStatus" Text=""
                                    FontSize="12" FontFamily="Segoe UI"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    VerticalAlignment="Center" Margin="16,0,0,0"/>

                        <!-- Word Count -->
                        <TextBlock x:Name="WordCountLabel" Text=""
                                    FontSize="12" FontFamily="Segoe UI"
                                    Foreground="{StaticResource TextSecondaryBrush}"
                                    VerticalAlignment="Center" Margin="16,0,0,0"
                                    HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Transcript editor -->
                <TextBox x:Name="TranscriptBox"
                         Grid.Row="2"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Segoe UI" FontSize="15"
                         Padding="20,16"
                         BorderThickness="0"
                         IsEnabled="False"
                         Background="White"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         Style="{StaticResource WatermarkTextBox}"
                         Tag="Type or paste the transcript here. Listen to the audio above and type as you go."
                         TextChanged="Transcript_TextChanged" Margin="0,10,0,0"/>

                <!-- Reviewer notes -->
                <Border Grid.Row="3" Padding="16,10"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Reviewer Notes" FontSize="13" FontWeight="SemiBold"
                                       FontFamily="Segoe UI"/>
                            
                        </StackPanel>
                        <TextBox x:Name="NotesBox"
                             Grid.Row="1"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="56"
                             Padding="3,4,3,0"
                             IsEnabled="False"
                             Style="{StaticResource WatermarkTextBox}"
                             Tag="Optional notes that will appear in the exported Word documentâ€¦"/>
                    </Grid>
                </Border>

                <!-- Action bar -->
                <Border Grid.Row="4" Padding="16,12"
                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0"
                        Background="#FAFBFC">
                    <Grid>
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="SaveButton" Content="ðŸ’¾ Save"
                                    Style="{StaticResource SuccessButton}"
                                    IsEnabled="False" Padding="12,8" FontSize="13"
                                    Click="Save_Click"/>
                            <Button x:Name="MarkReviewedButton" Content="âœ… Mark Reviewed"
                                    Style="{StaticResource PrimaryButton}"
                                    IsEnabled="False" Padding="12,8" FontSize="13"
                                    Margin="8,0,0,0"
                                    Click="MarkReviewed_Click"/>
                            <TextBlock x:Name="SaveStatus" FontSize="12" FontFamily="Segoe UI"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" Margin="14,0,0,0"/>
                        </StackPanel>
                        <Button x:Name="ExportButton" Content="ðŸ“„ Export to Word"
                                Style="{StaticResource OutlineButton}"
                                IsEnabled="False" Padding="12,8" FontSize="13"
                                HorizontalAlignment="Right"
                                Click="Export_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
